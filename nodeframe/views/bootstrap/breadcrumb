{# breadcrumb component #}
{# parents - array of objects with properties: label, path #}
{# current - current location name #}
{% macro component parents current %}
<ul class="breadcrumb">
{% for node in parents %}
    <li><a href="{{node.path}}">{{node.label}}</a> <span class="divider">/</span></li>
{% endfor %}
    <li class="active">{{current}}</li>
</ul>
{% endmacro %}